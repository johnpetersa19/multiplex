<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="AdwPreferencesDialog" id="preferences-dialog">
    <child>
      <object class="AdwPreferencesPage">
        <property name="title" translatable="true">Playback</property>
        <property name="icon-name">multimedia-player-symbolic</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">General</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Storage location</property>
                <property name="subtitle" translatable="true">Path to store downloaded torrents in</property>
                <property name="activatable-widget">storage-location-input</property>
                <child>
                  <object class="GtkButton" id="storage-location-input">
                    <style>
                      <class name="flat"/>
                    </style>
                    <property name="icon-name">folder-symbolic</property>
                    <property name="valign">3</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwEntryRow" id="mpv-command-input">
                <property name="title" translatable="true">Player command</property>
                <child>
                  <object class="GtkMenuButton">
                    <style>
                      <class name="flat"/>
                      <class name="circular"/>
                    </style>
                    <property name="icon-name">help-about</property>
                    <property name="tooltip-text">Show help</property>
                    <property name="valign">3</property>
                    <property name="popover">mpv-command-input-help-popover</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Advanced</property>
            <child>
              <object class="AdwSpinRow" id="verbosity-level-input">
                <property name="title" translatable="true">Verbosity level</property>
                <property name="subtitle" translatable="true">Verbosity level (0 is disabled, default is info, 7 is trace)</property>
                <property name="adjustment">
                  <object class="GtkAdjustment"></object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwExpanderRow">
                <property name="title" translatable="true">Remoting</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title" translatable="true">Use remote gateway</property>
                    <property name="subtitle" translatable="true">Use a remote hTorrent gateway instead of the local one</property>
                    <property name="activatable-widget">htorrent-remote-gateway-switch</property>
                    <child>
                      <object class="GtkSwitch" id="htorrent-remote-gateway-switch">
                        <property name="valign">3</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwEntryRow" id="htorrent-url-input">
                    <property name="title" translatable="true">URL</property>
                    <property name="editable">false</property>
                    <child>
                      <object class="GtkMenuButton">
                        <style>
                          <class name="flat"/>
                          <class name="circular"/>
                        </style>
                        <property name="icon-name">help-about</property>
                        <property name="tooltip-text">Show help</property>
                        <property name="valign">3</property>
                        <property name="popover">htorrent-url-input-popover</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwEntryRow" id="htorrent-username-input">
                    <property name="title" translatable="true">Username</property>
                    <property name="editable">false</property>
                    <child>
                      <object class="GtkMenuButton">
                        <style>
                          <class name="flat"/>
                          <class name="circular"/>
                        </style>
                        <property name="icon-name">help-about</property>
                        <property name="tooltip-text">Show help</property>
                        <property name="valign">3</property>
                        <property name="popover">htorrent-username-input-popover</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPasswordEntryRow" id="htorrent-password-input">
                    <property name="title" translatable="true">Password</property>
                    <property name="editable">false</property>
                    <child>
                      <object class="GtkMenuButton">
                        <style>
                          <class name="flat"/>
                          <class name="circular"/>
                        </style>
                        <property name="icon-name">help-about</property>
                        <property name="tooltip-text">Show help</property>
                        <property name="valign">3</property>
                        <property name="popover">htorrent-password-input-popover</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesPage">
        <property name="title" translatable="true">Synchronization</property>
        <property name="icon-name">video-joined-displays-symbolic</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">General</property>
            <child>
              <object class="AdwEntryRow" id="weron-url-input">
                <property name="title" translatable="true">Signaling server URL</property>
                <child>
                  <object class="GtkMenuButton">
                    <style>
                      <class name="flat"/>
                      <class name="circular"/>
                    </style>
                    <property name="icon-name">help-about</property>
                    <property name="tooltip-text">Show help</property>
                    <property name="valign">3</property>
                    <property name="popover">weron-url-input-popover</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwEntryRow" id="weron-ice-input">
                <property name="title" translatable="true">STUN/TURN servers</property>
                <child>
                  <object class="GtkMenuButton">
                    <style>
                      <class name="flat"/>
                      <class name="circular"/>
                    </style>
                    <property name="icon-name">help-about</property>
                    <property name="tooltip-text">Show help</property>
                    <property name="valign">3</property>
                    <property name="popover">weron-ice-input-popover</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="true">Advanced</property>
            <child>
              <object class="AdwSpinRow" id="weron-timeout-input">
                <property name="title" translatable="true">Connection timeout</property>
                <property name="subtitle" translatable="true">Time to wait to connect to the weron signaling server</property>
                <property name="adjustment">
                  <object class="GtkAdjustment"></object>
                </property>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Relay mode</property>
                <property name="subtitle" translatable="true">Force usage of TURN servers for weron</property>
                <property name="activatable-widget">weron-force-relay-input</property>
                <child>
                  <object class="GtkSwitch" id="weron-force-relay-input">
                    <property name="valign">3</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkPopover" id="mpv-command-input-help-popover">
    <child>
      <object class="GtkLabel">
        <property name="label">Command to launch mpv with</property>
      </object>
    </child>
  </object>
  <object class="GtkPopover" id="htorrent-url-input-popover">
    <child>
      <object class="GtkLabel">
        <property name="label">API address of the remote gateway</property>
      </object>
    </child>
  </object>
  <object class="GtkPopover" id="htorrent-username-input-popover">
    <child>
      <object class="GtkLabel">
        <property name="label">The remote gateway's username</property>
      </object>
    </child>
  </object>
  <object class="GtkPopover" id="htorrent-password-input-popover">
    <child>
      <object class="GtkLabel">
        <property name="label">The remote gateway's password</property>
      </object>
    </child>
  </object>
  <object class="GtkPopover" id="weron-url-input-popover">
    <child>
      <object class="GtkLabel">
        <property name="label">URL for the weron signaling server</property>
      </object>
    </child>
  </object>
  <object class="GtkPopover" id="weron-ice-input-popover">
    <child>
      <object class="GtkLabel">
        <property name="label">Comma-separated list of weron STUN (in format stun:host:port) and TURN servers (in format username:credential@turn:host:port)</property>
      </object>
    </child>
  </object>
</interface>