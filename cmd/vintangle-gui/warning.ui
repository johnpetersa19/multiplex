<?xml version='1.0' encoding='UTF-8'?>
<interface>
    <requires lib="libadwaita" version="1.1" />
    <requires lib="gtk" version="4.0" />

    <object class="GtkMessageDialog" id="warning-dialog">
        <property name="modal">true</property>
        <property name="text">No Media Player Could Be Found</property>
        <property name="secondary-text">Please install mpv to able to play media.</property>

        <child type="action">
            <object class="GtkButton" id="mpv-download-flathub-button">
                <property name="label">Get from Flathub</property>
                <property name="visible">false</property>
            </object>
        </child>

        <child type="action">
            <object class="GtkButton" id="mpv-download-website-button">
                <property name="label">Get from mpv.io</property>
            </object>
        </child>

        <child type="action">
            <object class="GtkButton" id="mpv-download-ignore-button">
                <style>
                    <class name="destructive-action"></class>
                </style>

                <property name="label">Ignore</property>
            </object>
        </child>
    </object>
</interface>