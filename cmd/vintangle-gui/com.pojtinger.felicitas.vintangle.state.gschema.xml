<?xml version="1.0" encoding="utf-8"?>
<schemalist>
    <schema id="com.pojtinger.felicitas.vintangle.state" path="/com/pojtinger/felicitas/vintangle/state/">
        <key name='verbose' type='x'>
            <default>5</default>
            <summary>Verbosity level</summary>
            <description>Verbosity level (0 is disabled, default is info, 7 is trace)</description>
        </key>

        <key name='storage' type='s'>
            <default>""</default>
            <summary>Storage location</summary>
            <description>Path to store downloaded torrents in</description>
        </key>

        <key name='mpv' type='s'>
            <default>""</default>
            <summary>mpv command</summary>
            <description>Command to launch mpv with</description>
        </key>

        <key name='gatewayremote' type='b'>
            <default>false</default>
            <summary>Use remote gateway</summary>
            <description>Use a remote hTorrent gateway instead of the local one</description>
        </key>

        <key name='gatewayurl' type='s'>
            <default>""</default>
            <summary>hTorrent URL</summary>
            <description>URL of the remote hTorrent gateway to use</description>
        </key>

        <key name='gatewayusername' type='s'>
            <default>""</default>
            <summary>hTorrent username</summary>
            <description>Username for the remote hTorrent gateway</description>
        </key>

        <key name='gatewaypassword' type='s'>
            <default>""</default>
            <summary>hTorrent password</summary>
            <description>Password for the remote hTorrent gateway</description>
        </key>
    </schema>
</schemalist>