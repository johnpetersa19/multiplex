<?xml version='1.0' encoding='UTF-8'?>
<interface>
    <requires lib="libadwaita" version="1.1" />
    <requires lib="gtk" version="4.0" />

    <object class="GtkDialog" id="subtitles-dialog">
        <property name="title">Subtitles</property>
        <property name="default-width">500</property>
        <property name="default-height">500</property>
        <property name="modal">true</property>
        <property name="use-header-bar">1</property>

        <child type="action">
            <object class="GtkButton" id="button-cancel">
                <property name="label">Cancel</property>
            </object>
        </child>

        <child type="action">
            <object class="GtkButton" id="button-ok">
                <style>
                    <class name="suggested-action"></class>
                </style>

                <property name="label">OK</property>
            </object>
        </child>

        <child>
            <object class="AdwClamp">
                <property name="maximum-size">600</property>
                <property name="vexpand">true</property>
                <property name="valign">fill</property>
                <property name="margin-top">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="margin-bottom">12</property>

                <child>
                    <object class="AdwPreferencesGroup" id="subtitle-tracks">
                        <property name="title" translatable="yes">Tracks</property>

                        <child type="header-suffix">
                            <object class="GtkButton" id="add-from-file-button">
                                <style>
                                    <class name="flat"></class>
                                </style>

                                <property name="valign">center</property>

                                <child>
                                    <object class="GtkBox">
                                        <property name="spacing">6</property>

                                        <child>
                                            <object class="GtkImage">
                                                <property name="icon-name">list-add-symbolic</property>
                                            </object>
                                        </child>

                                        <child>
                                            <object class="GtkLabel">
                                                <property name="label">Add from file</property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="AdwActionRow">
                                <property name="title" translatable="yes">None</property>
                                <property name="subtitle" translatable="yes">Disable subtitles</property>
                                <property name="activatable-widget">none-button</property>

                                <child>
                                    <object class="GtkCheckButton" id="none-button">
                                        <property name="valign">center</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="AdwActionRow">
                                <property name="title" translatable="yes">Sintel.en.srt</property>
                                <property name="subtitle" translatable="yes">Integrated in media</property>
                                <property name="activatable-widget">media-button</property>

                                <child>
                                    <object class="GtkCheckButton" id="media-button">
                                        <property name="valign">center</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="AdwActionRow">
                                <property name="title" translatable="yes">Sintel.fr.srt</property>
                                <property name="subtitle" translatable="yes">Integrated in media</property>
                                <property name="activatable-widget">media-button-2</property>

                                <child>
                                    <object class="GtkCheckButton" id="media-button-2">
                                        <property name="valign">center</property>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <child>
                            <object class="AdwActionRow">
                                <property name="title" translatable="yes">Sintel.de.srt</property>
                                <property name="subtitle" translatable="yes">Manually added</property>
                                <property name="activatable-widget">manual-button</property>

                                <child>
                                    <object class="GtkCheckButton" id="manual-button">
                                        <property name="valign">center</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>

        <action-widgets>
            <action-widget response="cancel">button-cancel</action-widget>
            <action-widget response="ok" default="true">button-ok</action-widget>
        </action-widgets>
    </object>
</interface>